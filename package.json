{
  "name": "ciser",
  "version": "0.1.0",
  "description": "a version update of ciser",
  "author": "lamhieu-vk",
  "style": "css/ciser.min.css",
  "main": "css/ciser.css",
  "files": [
    "css",
    "src"
  ],
  "repository": "lamhieu-vk/ciser",
  "keywords": [
    "css",
    "oocss",
    "postcss",
    "functional css",
    "design",
    "responsive",
    "performance"
  ],
  "license": "MIT",
  "devDependencies": {
    "copy-files": "^0.1.0",
    "immutable-css-cli": "^1.1.1",
    "normalize.css": "^7.0.0",
    "tachyons-modules": "^1.1.10",
    "tachyons-cli": "^1.0.11",
    "watch": "^1.0.2"
  },
  "contributors": [
    {
      "name": "Lam Hieu",
      "email": "lamhieu.vk@gmail.com"
    }
  ],
  "scripts": {
    "start": "npm run build:watch",
    "mutations": "immutable-css src/ciser.css --strict",
    "build": "npm run build:css && npm run build:minify",
    "build:css": "tachyons src/ciser.css > css/ciser.css",
    "build:minify": "tachyons src/ciser.css -m > css/ciser.min.css",
    "build:watch": "watch \"npm run build\" ./src/"
  }
}
